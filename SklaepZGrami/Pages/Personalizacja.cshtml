@page
@model SklaepZGrami.Pages.PersonalizacjaModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Sklep Internetowy - Gry Planszowe</title>
    <link href="https://fonts.googleapis.com/css?family=Bangers" rel="stylesheet">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="css/style.css">
    <link rel="stylesheet" href="css/fontello.css">
</head>

<body>
    <div id="baner">
        <a href="index.html"> <img src="img/zubrowka.png" class="d-block w-100" alt="..." width="500" height="300"></a>
    </div>

    <div id="meni">
        <form>
            <input type="text" placeholder="Login">
            <input type="text" placeholder="Password">
            <input type="submit" id="Zaloguj" value="Zaloguj">
            <a href="rejestracja.html">Rejestracja</a>
            <a href="koszyk.html"><i class="icon-basket"></i></a>

        </form>
    </div>

    <div id="slider">
        <div class="container">
            <div class="row">
                <div class="col">
                    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                        <ol class="carousel-indicators">
                            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                        </ol>
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img src="img/pacman.jpg" class="d-block w-100" alt="..." width="500" height="300">
                            </div>
                            <div class="carousel-item">
                                <img src="img/monopoly.jpg" class="d-block w-100" alt="..." width="500" height="300">
                            </div>
                            <div class="carousel-item">
                                <img src="img/ludo.jpeg" class="d-block w-100" alt="..." width="500" height="300">
                            </div>
                        </div>
                        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div id="mid">



        <div id="filtr">
            <ul>
                Filtry
                <li>Rodzaj gry</li>
                <li>Cena</li>
                <li>Ilość graczy</li>
            </ul>
            <form action="...">
                <select name="nazwa">
                    <option>Od najniższej</option>
                    <option>Od najwyższej</option>
                    (...)
                </select>
            </form>
        </div>

        <div id="menu">
            </div>
            <div id="opis">
                <h3>@Model.Nazwa[Model.produkt]</h3>
            </div>
            <div id="cenaprodukt">
                <br />
                <label>Wybież kolory pionków:</label>
                @if (Model.iGraczy[Model.produkt] == 4)
                {
            <table>
                @for (int i = 0; i < 5; i++)
                {
                <tr>
                    <td>
                        <img src="@Model.iG4[i]" class="d-block w-100" alt="..." width="100" height="30">
                    </td>
                    <td>
                        <form method="post" asp-page-handler="Col">
                            <input type="hidden" name="par" id="par" value="@Model.produkt" />
                            <input type="hidden" name="kol" id="kol" value="@i" />
                            <input type="hidden" name="login" id="login" value="@Model.login" />
                            <input type="hidden" name="koszykk" id="koszykk" value="@Model.koszyk" />
                            <input type="hidden" name="person" id="person" value="@Model.per" />
                            <input type="submit" id="Zaloguj" value="Wybież i dodaj do koszyka">
                        </form>
                    </td>
                </tr>
                }
            </table>
                } else
                {
            <table>
                @for (int i = 0; i < 5; i++)
                {
                    <tr>
                        <td>
                            <img src="@Model.iG2[i]" class="d-block w-100" alt="..." width="50" height="30">
                        </td>
                        <td>
                            <form method="post" asp-page-handler="Col">
                                <input type="hidden" name="par" id="par" value="@Model.produkt" />
                                <input type="hidden" name="kol" id="kol" value="@i" />
                                <input type="hidden" name="login" id="login" value="@Model.login" />
                                <input type="hidden" name="koszykk" id="koszykk" value="@Model.koszyk" />
                                <input type="hidden" name="person" id="person" value="@Model.per" />
                                <input type="submit" id="Zaloguj" value="Wybież i dodaj do koszyka">
                            </form>
                        </td>
                    </tr>
                }
            </table>
                }
            </div>
        </div>
    </div>
    <div id="footer">
        Kontakt O nas
    </div>
</body>

</html>
