@page
@model RejestracjaModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Sklep Internetowy - Gry Planszowe</title>
    <link href="https://fonts.googleapis.com/css?family=Bangers" rel="stylesheet">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="css/style.css">
    <link rel="stylesheet" href="css/fontello.css">
</head>

<body>
    <div id="baner">
        <a asp-page="/Index"> <img src="img/zubrowka.png" class="d-block w-100" alt="..." width="500" height="300"></a>
    </div>

    <div id="meni">
        <form method="post" asp-page-handler="Log">
            <input type="text" placeholder="Login">
            <input type="text" placeholder="Password">
            <input type="submit" id="Zaloguj" value="Zaloguj">
            rejestracja
            <a href=""><i class="icon-basket"></i></a>

        </form>
    </div>

    <div id="slider">
        <div class="container">
            <div class="row">
                <div class="col">
                    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                        <ol class="carousel-indicators">
                            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                        </ol>
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img src="img/pacman.jpg" class="d-block w-100" alt="..." width="500" height="300">
                            </div>
                            <div class="carousel-item">
                                <img src="img/monopoly.jpg" class="d-block w-100" alt="..." width="500" height="300">
                            </div>
                            <div class="carousel-item">
                                <img src="img/ludo.jpeg" class="d-block w-100" alt="..." width="500" height="300">
                            </div>
                        </div>
                        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div id="mid1">
        <form method="post" asp-page-handler="Save">
            <div class="form-row">

                <div class="form-group col-md-6">
                    <label for="inputimie4">Imie</label>
                    <input name="ap_imie" type="text" class="form-control" id="inputimie4" placeholder="imie">
                </div>

                <div class="form-group col-md-6">
                    <label for="inputnazwisko4">Nazwisko</label>
                    <input name="ap_nazwisko" type="text" class="form-control" id="inputnazwiskod4" placeholder="Nazwisko">
                </div>

            </div>

            <div class="form-group">
                <label for="inputlogin">Login</label>
                <input name="ap_nick" type="text" class="form-control" id="inputlogin" placeholder="Login">
            </div>

            <div class="form-row">

                <div class="form-group col-md-6">
                    <label for="inputpassword4">Hasło</label>
                    <input name="ap_haslo" type="password" class="form-control" id="inputpassword4" placeholder="Hasło">
                </div>

                <div class="form-group col-md-6">
                    <label for="inputpassword4">Powtórz Hasło</label>
                    <input name="ap_haslo1" type="password" class="form-control" id="inputpassword4" placeholder="Hasło">
                </div>

            </div>

            <div class="form-row">

                <div class="form-group col-md-3">
                    <label for="inputCity">Miasto</label>
                    <input name="ap_miasto" type="text" class="form-control" id="inputCity">
                </div>
                <div class="form-group col-md-3">
                    <label for="inputulica">Ulica</label>
                    <input name="ap_ulica" type="text" class="form-control" id="inputulica">
                </div>
                <div class="form-group col-md-3">
                    <label for="inputmieszkanie">Mieszkanie</label>
                    <input name="ap_mieszkanie" type="text" class="form-control" id="inputmieszkanie">
                </div>
            </div>

            <div class="form-group">

                <div class="form-check">
                    <input name="ap_check" class="form-check-input" type="checkbox" id="gridCheck">
                    <label class="form-check-label" for="gridCheck">
                        Zaznacz bo trzeba tak przy rejestracji
                    </label>
                </div>

            </div>

            <button type="submit" class="btn btn-primary">Rejestruj</button>
        </form>

    </div>
    <div id="footer">
        Kontakt O nas
    </div>
</body>

</html>