@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Sklep Internetowy - Gry Planszowe</title>
    <link href="https://fonts.googleapis.com/css?family=Bangers" rel="stylesheet">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="css/style.css">
    <link rel="stylesheet" href="css/fontello.css">
</head>

<body>
    <div id="baner">
        <a href="index.html"> <img src="img/zubrowka.png" class="d-block w-100" alt="..." width="500" height="300"></a>
    </div>

    <div id="meni">
        @if (Model.loged)
        {
            <form method="post">
                <input name="login" type="text" placeholder="Login">
                <input name="haslo" type="password" placeholder="Password">
                <input type="submit" id="Zaloguj" value="Zaloguj">
                <a asp-page="/Rejestracja">Rejestracja</a>
            </form>
            <form method="post" asp-page-handler="Kosz">
                <input type="hidden" name="loginn" id="loginn" value="@Model.login" />
                <input type="hidden" name="koszykk" id="koszykk" value="@Model.koszyk" />
                <input type="hidden" name="person" id="person" value="@Model.per" />
                <input type="submit" id="Koszyk" value="Koszyk">
            </form>}
        else
        {
            @Model.login

            <a asp-page="/Index">Wyloguj</a>
            <form method="post" asp-page-handler="Kosz">
                <input type="hidden" name="loginn" id="loginn" value="@Model.login" />
                <input type="hidden" name="koszykk" id="koszykk" value="@Model.koszyk" />
                <input type="hidden" name="person" id="person" value="@Model.per" />
                <input type="submit" id="Koszyk" value="Koszyk">
            </form>
        }
    </div>

    <div id="slider">
        <div class="container">
            <div class="row">
                <div class="col">
                    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                        <ol class="carousel-indicators">
                            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                        </ol>
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img src="img/pacman.jpg" class="d-block w-100" alt="..." width="500" height="300">
                            </div>
                            <div class="carousel-item">
                                <img src="img/monopoly.jpg" class="d-block w-100" alt="..." width="500" height="300">
                            </div>
                            <div class="carousel-item">
                                <img src="img/ludo.jpeg" class="d-block w-100" alt="..." width="500" height="300">
                            </div>
                        </div>
                        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div id="mid">



        <div id="filtr">
            <ul>
                Filtry
                <li>Rodzaj gry</li>
                <form method="post" asp-page-handler="Fil">
                    <input type="hidden" name="par" id="par" value="1" />
                    <input type="hidden" name="login" id="login" value="@Model.login" />
                    <input type="hidden" name="koszykk" id="koszykk" value="@Model.koszyk" />
                    <input type="hidden" name="person" id="person" value="@Model.per" />
                    <input type="hidden" name="r1" id="r1" value="@Model.rodzaj1" />
                    <input type="hidden" name="c1" id="c1" value="@Model.cena1" />
                    <input type="hidden" name="i1" id="i1" value="@Model.iGraczy1" />
                    <input type="submit" id="Zaloguj" value="Gry planszowe">
                </form>
                <li>Cena</li>
                <form method="post" asp-page-handler="Fil">
                    <input type="hidden" name="par" id="par" value="2" />
                    <input type="hidden" name="login" id="login" value="@Model.login" />
                    <input type="hidden" name="koszykk" id="koszykk" value="@Model.koszyk" />
                    <input type="hidden" name="person" id="person" value="@Model.per" />
                    <input type="hidden" name="r1" id="r1" value="@Model.rodzaj1" />
                    <input type="hidden" name="c1" id="c1" value="@Model.cena1" />
                    <input type="hidden" name="i1" id="i1" value="@Model.iGraczy1" />
                    <input type="submit" id="Zaloguj" value="0 - 10">
                </form>
                <form method="post" asp-page-handler="Fil">
                    <input type="hidden" name="par" id="par" value="3" />
                    <input type="hidden" name="login" id="login" value="@Model.login" />
                    <input type="hidden" name="koszykk" id="koszykk" value="@Model.koszyk" />
                    <input type="hidden" name="person" id="person" value="@Model.per" />
                    <input type="hidden" name="r1" id="r1" value="@Model.rodzaj1" />
                    <input type="hidden" name="c1" id="c1" value="@Model.cena1" />
                    <input type="hidden" name="i1" id="i1" value="@Model.iGraczy1" />
                    <input type="submit" id="Zaloguj" value="10 - 30">
                </form>
                <form method="post" asp-page-handler="Fil">
                    <input type="hidden" name="par" id="par" value="4" />
                    <input type="hidden" name="login" id="login" value="@Model.login" />
                    <input type="hidden" name="koszykk" id="koszykk" value="@Model.koszyk" />
                    <input type="hidden" name="person" id="person" value="@Model.per" />
                    <input type="hidden" name="r1" id="r1" value="@Model.rodzaj1" />
                    <input type="hidden" name="c1" id="c1" value="@Model.cena1" />
                    <input type="hidden" name="i1" id="i1" value="@Model.iGraczy1" />
                    <input type="submit" id="Zaloguj" value="30 - 100">
                </form>
                <li>Ilość graczy</li>
                <form method="post" asp-page-handler="Fil">
                    <input type="hidden" name="par" id="par" value="5" />
                    <input type="hidden" name="login" id="login" value="@Model.login" />
                    <input type="hidden" name="koszykk" id="koszykk" value="@Model.koszyk" />
                    <input type="hidden" name="person" id="person" value="@Model.per" />
                    <input type="hidden" name="r1" id="r1" value="@Model.rodzaj1" />
                    <input type="hidden" name="c1" id="c1" value="@Model.cena1" />
                    <input type="hidden" name="i1" id="i1" value="@Model.iGraczy1" />
                    <input type="submit" id="Zaloguj" value="2">
                </form>
                <form method="post" asp-page-handler="Fil">
                    <input type="hidden" name="par" id="par" value="6" />
                    <input type="hidden" name="login" id="login" value="@Model.login" />
                    <input type="hidden" name="koszykk" id="koszykk" value="@Model.koszyk" />
                    <input type="hidden" name="person" id="person" value="@Model.per" />
                    <input type="hidden" name="r1" id="r1" value="@Model.rodzaj1" />
                    <input type="hidden" name="c1" id="c1" value="@Model.cena1" />
                    <input type="hidden" name="i1" id="i1" value="@Model.iGraczy1" />
                    <input type="submit" id="Zaloguj" value="4">
                </form>
            </ul>
            <form action="...">
                <select name="nazwa">
                    <option>Od najniższej</option>
                    <option>Od najwyższej</option>
                    (...)
                </select>
            </form>
        </div>

        @for (int i = 0; i < Model.prod_i; i++)
        {
            <div id="menu">
                @if (((Model.rodzaj1 == 1 && Model.rodzaj[i] == "Planszowa") || Model.rodzaj1 == 0) && ((Model.cena1 == 1 && Model.cena[i] <= 10) || (Model.cena1 == 2 && (Model.cena[i] > 10 && Model.cena[i] <= 30)) || (Model.cena1 == 3 && (Model.cena[i] > 30 && Model.cena[i] <= 100)) || Model.cena1 == 0) && ((Model.iGraczy1 == 1 && Model.iGraczy[i] == 2) || ((Model.iGraczy1 == 2 && Model.iGraczy[i] == 4) || Model.iGraczy1 == 0)))
                {
                    <div id="gra">
                        <div class="media gra">
                            <form method="post" asp-page-handler="Pro">
                                <input type="hidden" name="par" id="par" value="@i" />
                                <input type="hidden" name="login" id="login" value="@Model.login" />
                                <input type="hidden" name="koszykk" id="koszykk" value="@Model.koszyk" />
                                <input type="hidden" name="person" id="person" value="@Model.per" />
                                <button type="submit" class="btn btn-primary"><img src="@Model.pic[i]" class="align-self-center mr-3" alt="..." width="64" height="64"></button>

                            </form>

                            <div class="media-body">
                                <h5 class="mt-0">@Model.Nazwa[i]</h5>
                                <p>
                                    @Model.Opis[i]
                                </p>
                            </div>
                        </div>
                    </div>
                    <div id="cena">
                        Cena: @Model.cena[i]<br />
                        <form method="post" asp-page-handler="Sell">
                            <input type="hidden" name="par" id="par" value="@i" />
                            <input type="hidden" name="login" id="login" value="@Model.login" />
                            <input type="hidden" name="koszykk" id="koszykk" value="@Model.koszyk" />
                            <input type="hidden" name="person" id="person" value="@Model.per" />
                            <input type="submit" id="Zaloguj" value="Kup teraz">
                        </form>

                    </div>}
            </div>}
    </div>
    <div id="footer">
        Kontakt O nas
    </div>
</body>

</html>